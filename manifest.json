{"name": "聚抢先",
"version": "2.0",
"manifest_version":2,
"icons": { "48": "icon48.png" },
"background" : {
  "scripts": [
    "js/reconnecting-websocket.min.js",
    "js/jquery.js",
    "js/bg.js"
  ]
},
"description": "还在为聚划算开抢而苦苦等待嘛？还在为抢不到而顿足捶胸嘛？一款为抢聚划算而生的神奇来了。设定好您要抢的宝贝链接后，剩下的就交给我们啦！",
"browser_action": {"default_icon": "icon19.png"},
"web_accessible_resources": ["*"],
"browser_action": {
  "default_icon": "icon48.png",
  "default_title": "为聚划算抢购量身定做的一款神器！",
  "default_popup": "popup.html"
},
"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
"content_scripts": [
    {
      "matches": [
        "*://detail.tmall.com/*","*://chaoshi.detail.tmall.com/*","*://item.taobao.com/item.htm*","*://detail.tmall.hk/*"
      ],
      "css": ["css/content.css","css/minippfix.css","js/date/style.css"],
      "js": ["js/jquery.js","js/layer/layer.js","js/wxLogin.js","js/storage.js","js/date/Ecalendar.jquery.min.js","js/content.js"]
    },
    {
      "matches": [
        "*://uland.taobao.com/coupon/edetail*"
      ],
      "js": ["js/jquery.js","js/coupon.js"]
    },
    {
      "matches" : ["*://login.m.taobao.com/login*"],
      "js": ["js/jquery.js","js/login.js"]
    },
    {
      "matches" : ["*://detail.m.tmall.com/*"],
      "js": ["js/zepto.min.js","js/qg.js"]
    },
    {
      "matches" : ["*://h5.m.taobao.com/awp/core/detail*"],
      "js": ["js/zepto.min.js","js/qg.js"]
    },
    {
      "matches" : ["*://h5.m.taobao.com/mlapp/cart*"],
      "js": ["js/zepto.min.js","js/car.js"]
    },
    {
      "matches": ["*://buy.m.tmall.com/order/confirmOrderWap*","*://h5.m.taobao.com/cart/order*"],
      "js": ["js/zepto.min.js","js/buySubmit.js"]
    },
    {
      "matches": ["*://maliprod.alipay.com/w/trade_pay.do*","*://maliprod.alipay.com/batch_payment.do*"],
      "js": ["js/zepto.min.js","js/pay.js"]
    },
    {
      "matches": ["*://taoquan.taobao.com/coupon/unify_apply*"],
      "js": ["js/zepto.min.js","js/lingquan.js"]
    }
  ],
"permissions": [
    "tabs",
    "storage",
    "notifications",
    "contextMenus",
    "clipboardRead",
    "clipboardWrite",
    "webRequest",
    "webRequestBlocking",
    "idle",
    "http://*/",
    "https://*/",
    "cookies"
  ]
}